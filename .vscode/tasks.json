{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile and Run Go Program with Redirection (PowerShell)",
        "type": "shell",
        "command": "powershell",
        "args": [
          "-Command",
          "go run '${file}' < input.txt > output.txt"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": false
        },
        "problemMatcher": []
      }
    ]
  }
  